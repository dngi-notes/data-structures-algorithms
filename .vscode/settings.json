{
  // Disable all suggestions and autocomplete
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.tabCompletion": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": false,
  "editor.inlineSuggest.enabled": false,
  "editor.suggest.showIcons": false,
  "editor.snippetSuggestions": "none",
  
  // Disable hover info, signature help, and code actions
  "editor.hover.enabled": false,
  "editor.hover.delay": 10000,
  "editor.lightbulb.enabled": "off",
  "editor.codeActionsOnSave": {},
  "editor.codeLens": false,
  
  // Disable language-specific suggestions
  "javascript.suggest.enabled": false,
  "typescript.suggest.enabled": false,
  "java.completion.enabled": false,
  "python.languageServer": "None",
  
  // Disable Copilot and AI suggestions (if installed)
  "github.copilot.enable": {
    "*": false
  },
  "github.copilot.editor.enableAutoCompletions": false,
  
  // Disable automatic imports and organizing
  "javascript.suggest.autoImports": false,
  "typescript.suggest.autoImports": false,
  "java.completion.importOrder": [],
  
  // Disable validation/linting that shows squiggles
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "java.errors.incompleteClasspath.severity": "ignore",
  
  // Minimal editor chrome for clean interview environment
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.folding": false,
  "editor.glyphMargin": false
}